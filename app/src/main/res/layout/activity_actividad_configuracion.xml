<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="co.edu.dmi.monk.ejemploaplicacionlogin.ActividadConfiguracion">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ip (i.e. 127.0.0.1)"
        android:id="@+id/ed_txt_config_ip_title"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tv_txt_config_title"
        android:layout_alignStart="@+id/ed_txt_config_puerto_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed_txt_config_ip"
        android:layout_below="@+id/ed_txt_config_ip_title"
        android:layout_alignEnd="@+id/ed_txt_config_puerto"
        android:layout_alignStart="@+id/ed_txt_config_puerto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Puerto (i.e. 5000)"
        android:id="@+id/ed_txt_config_puerto_title"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/ed_txt_config_ip"
        android:layout_toEndOf="@+id/btn_config_aceptar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ed_txt_config_puerto"
        android:layout_below="@+id/ed_txt_config_puerto_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ConfiguraciÃ³n"
        android:id="@+id/tv_txt_config_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/btn_config_aceptar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btn_config_cancelar"
        android:layout_alignTop="@+id/btn_config_aceptar"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
